{
	"name": "vscode-substrate",
	"displayName": "VSCode Substrate",
	"description": "Manage your Substrate node and add pallets from the Marketplace to your runtime",
	"version": "0.4.6",
	"publisher": "paritytech",
	"icon": "resources/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/paritytech/vscode-substrate.git"
	},
	"bugs": {
		"url": "https://github.com/paritytech/vscode-substrate/issues"
	},
	"homepage": "https://github.com/paritytech/vscode-substrate/blob/master/README.md",
	"engines": {
		"vscode": "^1.42.0"
	},
	"keywords": [
		"pallets",
		"polkadot",
		"parity",
		"web3"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "substrateProcesses",
				"contents": "No actions were found in this workspace."
			},
			{
				"view": "substrateProcesses",
				"contents": "No node is currently running."
			},
			{
				"view": "substrateNodes",
				"contents": "No node was found in your current workspace.\n[Open folder](command:vscode.openFolder)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "substrate",
					"title": "Substrate",
					"icon": "resources/substrate.svg"
				}
			]
		},
		"views": {
			"substrate": [
				{
					"id": "substrateTasks",
					"name": "Actions",
					"group": "@0"
				},
				{
					"id": "substrateProcesses",
					"name": "Processes",
					"group": "@1"
				},
				{
					"id": "substrateNodes",
					"name": "Nodes",
					"group": "@2"
				},
				{
					"id": "substrateMarketplace",
					"name": "Marketplace",
					"group": "@3"
				}
			]
		},
		"commands": [
			{
				"command": "substrate.runTask",
				"title": "Substrate: Execute action",
				"icon": "resources/runTask.svg"
			},
			{
				"command": "substrate.stopProcess",
				"title": "Substrate: Stop process",
				"icon": "resources/stopProcess.svg"
			},
			{
				"command": "substrate.polkadotApps",
				"title": "Substrate: Polkadot Apps",
				"icon": "resources/apps.svg"
			},
			{
				"command": "substrate.startNode",
				"title": "Substrate: Start node",
				"icon": "resources/startNode.svg"
			},
			{
				"command": "substrate.purgeChain",
				"title": "Substrate: Purge chain",
				"icon": "resources/purgeChain.svg"
			},
			{
				"command": "substrateMarketplace.palletHomepage",
				"title": "Homepage",
				"icon": "resources/home.svg"
			},
			{
				"command": "substrateMarketplace.palletGithub",
				"title": "GitHub",
				"icon": "resources/github.svg"
			},
			{
				"command": "substrateMarketplace.palletDocumentation",
				"title": "Documentation",
				"icon": "resources/book.svg"
			},
			{
				"command": "substrateMarketplace.installPallet",
				"title": "Add pallet to runtime",
				"icon": "resources/add.svg"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "substrateMarketplace.palletHomepage",
					"when": "false"
				},
				{
					"command": "substrateMarketplace.palletGithub",
					"when": "false"
				},
				{
					"command": "substrateMarketplace.palletDocumentation",
					"when": "false"
				},
				{
					"command": "substrateMarketplace.installPallet",
					"when": "false"
				}
			],
			"view/item/context": [
				{
					"command": "substrate.runTask",
					"when": "view == substrateTasks",
					"group": "inline@0"
				},
				{
					"command": "substrate.polkadotApps",
					"when": "view == substrateProcesses && viewItem == theia",
					"group": "inline@0"
				},
				{
					"command": "substrate.stopProcess",
					"when": "view == substrateProcesses",
					"group": "inline@1"
				},
				{
					"command": "substrate.startNode",
					"when": "view == substrateNodes",
					"group": "inline@0"
				},
				{
					"command": "substrate.purgeChain",
					"when": "view == substrateNodes",
					"group": "inline@1"
				},
				{
					"command": "substrateMarketplace.palletHomepage",
					"when": "view == substrateMarketplace && viewItem == pallet || view == substrateMarketplace && viewItem == palletInstalled",
					"group": "inline@0"
				},
				{
					"command": "substrateMarketplace.palletGithub",
					"when": "view == substrateMarketplace && viewItem == pallet || view == substrateMarketplace && viewItem == palletInstalled",
					"group": "inline@1"
				},
				{
					"command": "substrateMarketplace.palletDocumentation",
					"when": "view == substrateMarketplace && viewItem == pallet || view == substrateMarketplace && viewItem == palletInstalled",
					"group": "inline@2"
				},
				{
					"command": "substrateMarketplace.installPallet",
					"when": "view == substrateMarketplace && viewItem == pallet",
					"group": "inline@3"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.42.0",
		"tslint": "^5.12.1",
		"typescript": "^3.5.1"
	},
	"dependencies": {
		"@types/lodash": "^4.14.149",
		"@types/node-fetch": "^2.5.5",
		"array-flat-polyfill": "^1.0.1",
		"glob": "^7.1.6",
		"lodash": "^4.17.15",
		"node-fetch": "^2.6.0",
		"rxjs": "^6.5.5",
		"string.prototype.matchall": "^4.0.2"
	}
}
