{
	"name": "substrate-marketplace",
	"displayName": "Substrate Marketplace",
	"description": "Browse and install pallets from the Substrate Marketplace",
	"version": "0.1.1",
	"publisher": "axelchalon",
	"repository": "github:axelchalon/vscode-marketplace",
	"engines": {
		"vscode": "^1.42.0"
	},
	"keywords": [
		"pallets"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:substrateMarketplace"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration":[
			{
				"title": "Substrate Marketplace",
				"properties": {
					"substrateMarketplace.runtimeManifestPath": {
						"type": ["string", null],
						"default": null,
						"description": "Specifies the path to your project's runtime manifest (Cargo.toml) used when installing pallets. It can be either an absolute path or a path relative to the workspace root. If not specified, will try `runtime/Cargo.toml` and `Cargo.toml`."
					}
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "substrateMarketplace",
					"name": "Substrate Marketplace"
				}
			]
		},
		"commands": [
			{
				"command": "substrateMarketplace.palletHomepage",
				"title": "Homepage",
				"icon": {
					"light": "resources/light/homepage.svg",
					"dark": "resources/dark/homepage.svg"
				}
			},
			{
				"command": "substrateMarketplace.palletDocumentation",
				"title": "Documentation",
				"icon": {
					"light": "resources/light/documentation.svg",
					"dark": "resources/dark/documentation.svg"
				}
			},
			{
				"command": "substrateMarketplace.palletGithub",
				"title": "GitHub",
				"icon": {
					"light": "resources/light/github.svg",
					"dark": "resources/dark/github.svg"
				}
			},
			{
				"command": "substrateMarketplace.installPallet",
				"title": "Install pallet",
				"icon": {
					"light": "resources/light/install.svg",
					"dark": "resources/dark/install.svg"
				}
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "substrateMarketplace.palletHomepage",
					"when": "view == substrateMarketplace && viewItem == pallet",
					"group": "inline@0"
				},
				{
					"command": "substrateMarketplace.palletDocumentation",
					"when": "view == substrateMarketplace && viewItem == pallet",
					"group": "inline@1"
				},
				{
					"command": "substrateMarketplace.palletGithub",
					"when": "view == substrateMarketplace && viewItem == pallet",
					"group": "inline@2"
				},
				{
					"command": "substrateMarketplace.installPallet",
					"when": "view == substrateMarketplace && viewItem == pallet",
					"group": "inline@3"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.42.0",
		"typescript": "^3.5.1",
		"tslint": "^5.12.1"
	},
	"dependencies": {
		"@types/lodash": "^4.14.149",
		"@types/node-fetch": "^2.5.5",
		"lodash": "^4.17.15",
		"node-fetch": "^2.6.0"
	}
}
