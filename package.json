{
	"name": "substrate-marketplace",
	"displayName": "Substrate Marketplace",
	"description": "Browse and install pallets from the Substrate Marketplace",
	"version": "0.1.1",
	"publisher": "axelchalon",
	"repository": "github:axelchalon/vscode-marketplace",
	"engines": {
		"vscode": "^1.42.0"
	},
	"keywords": [
		"pallets"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:substrateMarketplace"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "substrateMarketplace",
					"name": "Substrate Marketplace"
				}
			]
		},
		"commands": [
			{
				"command": "substrateMarketplace.palletHomepage",
				"title": "Homepage",
				"icon": "$(home)"
			},
			{
				"command": "substrateMarketplace.palletGithub",
				"title": "GitHub",
				"icon": "$(github)"
			},
			{
				"command": "substrateMarketplace.palletDocumentation",
				"title": "Documentation",
				"icon": "$(book)"
			},
			{
				"command": "substrateMarketplace.installPallet",
				"title": "Add pallet to runtime",
				"icon": "$(add)"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "substrateMarketplace.palletHomepage",
					"when": "view == substrateMarketplace && viewItem == pallet || view == substrateMarketplace && viewItem == palletInstalled",
					"group": "inline@0"
				},
				{
					"command": "substrateMarketplace.palletGithub",
					"when": "view == substrateMarketplace && viewItem == pallet || view == substrateMarketplace && viewItem == palletInstalled",
					"group": "inline@1"
				},
				{
					"command": "substrateMarketplace.palletDocumentation",
					"when": "view == substrateMarketplace && viewItem == pallet || view == substrateMarketplace && viewItem == palletInstalled",
					"group": "inline@2"
				},
				{
					"command": "substrateMarketplace.installPallet",
					"when": "view == substrateMarketplace && viewItem == pallet",
					"group": "inline@3"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.42.0",
		"tslint": "^5.12.1",
		"typescript": "^3.5.1"
	},
	"dependencies": {
		"@types/lodash": "^4.14.149",
		"@types/node-fetch": "^2.5.5",
		"glob": "^7.1.6",
		"lodash": "^4.17.15",
		"node-fetch": "^2.6.0",
		"rxjs": "^6.5.5",
		"string.prototype.matchall": "^4.0.2"
	}
}
